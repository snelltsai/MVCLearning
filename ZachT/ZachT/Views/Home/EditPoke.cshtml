
@{
    ViewBag.Title = "EditPoke";
}
@model ZachT.Models.ClsPokemon

<h2>EditPoke</h2>


<form method="post" action="/Home/EditPoke">


    <div class="form-group row">
        <label for="inputCharName" class="col-sm-2">ID</label>
            <div class="col-sm-10">
                <!-- name的名稱要與物件一致-->
                <input type="number" id="inputPokeID" name="PokeID" class=" form-control" value="@Model.PokeID" readonly/>
            </div>
    </div>


    <div class="form-group row">
        <label for="inputCharName" class="col-sm-2">Name</label>
        <div class="col-sm-10">
            <input type="text" id="inputPokeName" name="PokeName" class=" form-control" value="@Model.PokeName" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="save" />
</form>
